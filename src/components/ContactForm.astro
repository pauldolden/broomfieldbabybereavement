---
import BeeLeft from "./BeeLeft.astro";
import Phone from "@components/icons/Phone.svelte";
import Email from "@components/icons/Email.svelte";
import Facebook from "@components/icons/Facebook.svelte";
---

<section id="contact" class="relative mt-12">
  <div class="absolute left-0 top-0">
    <BeeLeft />
  </div>
  <div class="section-container">
    <div class="grid grid-cols-1 lg:grid-cols-2 grid-rows-1 gap-y-12 gap-x-24">
      <div>
        <h2 class="section-title">Contact Us</h2>
        <p class="text-base mb-7">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut et neque
          sed risus finibus tempor. Pellentesque consectetur ex nec tortor
          bibendum sagittis.
        </p>
        <div class="flex text-black font-semibold text-sm mb-4">
          <div class="w-[18px] h-[18px]flex-0 mr-2.5"><Phone /></div>
          <div class="flex-1">01234 567 891</div>
        </div>
        <div class="flex text-black font-semibold text-sm mb-4">
          <div class="w-[18px] h-[18px]flex-0 mr-2.5"><Email /></div>
          <div class="flex-1">hello@contact.com</div>
        </div>
        <div class="flex text-black font-semibold text-sm">
          <div class="w-[18px] h-[18px]flex-0 mr-2.5"><Facebook /></div>
          <div class="flex-1">broomfieldbabybereavement</div>
        </div>
      </div>
      <form
        name="contact"
        class="bg-yellow rounded-lg w-[500px] p-6"
        data-netlify="true"
      >
        <h3 class="text-lg font-semibold mb-2">Get in touch</h3>
        <input
          id="name"
          type="text"
          required
          aria-required="true"
          placeholder="Name"
          class="w-full p-2 rounded mb-2.5"
        />
        <input
          id="email"
          type="email"
          required
          aria-required="true"
          placeholder="Email"
          class="w-full p-2 rounded mb-2.5"
        />
        <textarea
          id="message"
          required
          aria-required="true"
          placeholder="Message"
          rows="6"
          class="w-full p-2 rounded mb-2.5"></textarea>
        <button type="submit" class="btn bg-black text-white">Send</button>
      </form>
    </div>
  </div>
</section>
