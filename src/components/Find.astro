---
import { Image } from "@astrojs/image/components";
import Clock from "@components/icons/Clock.svelte";
import Pin from "@components/icons/Pin.svelte";
---

<section id="find">
  <div class="section-container">
    <div class="grid grid-cols-1 lg:grid-cols-2 grid-rows-1 gap-y-12 gap-x-24">
      <div>
        <h2 class="section-title">When & Where We Meet</h2>
        <p class="text-sm mb-7">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut et neque
          sed risus finibus tempor.
        </p>
        <div class="flex text-black font-semibold mb-7 text-sm">
          <div class="w-[18px] h-[18px] flex-0 mr-2.5"><Clock /></div>
          <div class="flex-1">
            <p>Meeting Times:</p>
            <p>18:00 - 21:00 Every Thursday</p>
          </div>
        </div>
        <div class="flex text-black font-semibold text-sm">
          <div class="w-[18px] h-[18px]flex-0 mr-2.5"><Pin /></div>
          <div class="flex-1">
            <address class="not-italic">
              <p>124 Main Road,</p>
              <p>Broomfield,</p>
              <p>Chelmsford,</p>
              <p>CM1 7AG</p>
            </address>
          </div>
        </div>
      </div>
      <Image
        class="rounded-lg"
        src="/images/temp-map.jpg"
        alt="Our Support"
        width={500}
        aspectRatio={500 / 320}
      />
    </div>
  </div>
</section>
