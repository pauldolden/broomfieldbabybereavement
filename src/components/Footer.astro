---
import type { Link } from "@models/Link";
import { Image } from "@astrojs/image/components";
import telephoneImage from "@assets/icons/phone.svg";
import emailImage from "@assets/icons/email.svg";
import facebookImage from "@assets/icons/facebook.svg";

export type Column = Link[];

export type ContactIcon = {
  href: string;
  imageSrc: string;
  alt: string;
};

export interface Props {
  columns: Column[];
}

const iconSize = 32;

const contacts: ContactIcon[] = [
  {
    href: "tel:07123456789",
    imageSrc: telephoneImage,
    alt: "Phone Broomfield Baby Bereavement",
  },
  {
    href: "mail:info@bbb.com",
    imageSrc: emailImage,
    alt: "Email Broomfield Baby Bereavement",
  },
  {
    href: "https://facebook.com/BBB",
    imageSrc: facebookImage,
    alt: "Facebook page for Broomfield Baby Bereavement",
  },
];

const { columns } = Astro.props;
---

<footer class="bg-black py-8">
  <div class="flex flex-col md:flex-row max-w-5xl mx-4 lg:mx-auto">
    <div class="flex-1">
      <h3 class="text-yellow text-lg font-semibold mb-2.5">Quicklinks</h3>
      <nav class="flex flex-row text-white">
        {
          columns.map((links) => (
            <ul class="mr-16">
              {links.map((link) => (
                <li class="mb-2">
                  <a href={link.href} title={link.alt}>
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          ))
        }
      </nav>
    </div>
    <div class="mt-auto text-sm">
      <div class="text-white">
        Site by <a
          href="https://pauldolden.com"
          target="_blank"
          class="text-yellow">Paul Dolden</a
        >
        & <a href="/" class="text-yellow">Fred Perkins</a>
      </div>
      <div class="text-white">
        Design By <a
          class="text-yellow"
          href="https://www.instagram.com/itsloxley"
          target="_blank">Lloyd Oxley</a
        >
      </div>
      <div class="text-yellow mt-auto">
        Broomfield Baby Bereavement {new Date().getFullYear()} &copy;
      </div>
    </div>
  </div>
</footer>
