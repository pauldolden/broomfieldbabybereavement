---
import BeeLeft from "@components/BeeLeft.astro";
import Logo from "@components/Logo.astro";
import BeeRight from "@components/BeeRight.astro";
---

<section
  id="hero"
  class="py-10 lg:py-28 bg-gradient-to-b from-yellow-gra-start to-yellow-gra-end flex flex-col justify-center items-center relative"
>
  <div class="section-container">
    <div class="absolute left-0 top-24">
      <BeeLeft />
    </div>
    <div class="container mx-auto max-w-2xl">
      <Logo />
      <div>
        <p class="text-lg font-light mt-5">
          A support group for bereaved families, based in Broomfield, Essex.
        </p>
      </div>
    </div>
    <div class="absolute right-0 bottom-24">
      <BeeRight />
    </div>
  </div>
</section>
