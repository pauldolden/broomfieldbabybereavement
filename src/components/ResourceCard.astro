---
const props = Astro.props;
---

<div class="border flex flex-col border-gray-200 rounded-lg shadow bg-yellow">
  <a class="flex flex-1 bg-white items-center" href={props.link}>
    <img class="rounded-t-lg w-full contain" src={props.image} alt={props.imageAlt} />
  </a>
  <div class="p-5">
    <h5 class="mb-2 text-2xl font-bold tracking-tight text-white">
      {props.title}
    </h5>
    <p class="mb-3 font-normal text-dark">
      {props.description.content[0].content.map((item) => item.value).join("")}
    </p>
    {
      props.link && (
        <a
          target="_blank"
          href={props.link}
          class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-yellow bg-dark rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300"
        >
          Find Out More
          <svg
            aria-hidden="true"
            class="w-4 h-4 ml-2 -mr-1"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      )
    }
    {props?.asset && (
    <a
      target="_blank"
      download={`${props.title}.pdf`}
      href={props.asset}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-yellow bg-dark rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300"
    >
      Download
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="w-4 h-4 ml-2 -mr-1"
        viewBox="0 0 512 512"
        fill="currentColor"
        ><!--! Font Awesome Pro 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
        <path
          d="M288 32c0-17.7-14.3-32-32-32s-32 14.3-32 32V274.7l-73.4-73.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l128 128c12.5 12.5 32.8 12.5 45.3 0l128-128c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L288 274.7V32zM64 352c-35.3 0-64 28.7-64 64v32c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V416c0-35.3-28.7-64-64-64H346.5l-45.3 45.3c-25 25-65.5 25-90.5 0L165.5 352H64zm368 56a24 24 0 1 1 0 48 24 24 0 1 1 0-48z"
        ></path>
      </svg>
    </a>
    )}
  </div>
</div>
